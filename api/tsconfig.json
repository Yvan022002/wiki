{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true,
    "experimentalEsm": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
